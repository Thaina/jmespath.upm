{
  "version": "1.0.0-*",
  "dependencies": {
    "NETStandard.Library": "1.6.0",
    "Newtonsoft.Json": "9.0.1"
  },
  "frameworks": {
    "netstandard1.6": {
      "imports": "dnxcore50"
    }
  },
  "runtimes": {
    "win10-x64": {},
    "osx.10.10-x64": {},
    "ubuntu.14.04-x64": {}
  },
  "buildOptions": {
    "compile": {
      "include": [
        "../shared/**/*.cs",
		"../gppg.runtime/**/*.cs"
      ]
	}
  },
  "scripts": {
    "precompile": [
      "dotnet %project:Directory%../../../bin/dotnet-gplex.dll /out:%project:Directory%/../shared/JmesPathScanner.cs %project:Directory%/../shared/JmesPathScanner.lex",
      "dotnet %project:Directory%../../../bin/dotnet-gppg.dll /gplex /out:%project:Directory%/../shared/JmesPathParser.cs %project:Directory%/../shared/JmesPathParser.y"
    ],
    "postcompile": []
  },
  "packOptions": {
    "summary": "JmesPath.Net is a fully compliant JMESPATH parser.",
    "tags": [
      "jmespath",
      "json"
    ],
    "projectUrl": "https://github.com/jdevillard/JmesPath.Net",
    "licenseUrl": "https://github.com/jdevillard/JmesPath.Net/blob/master/LICENSE",
    "requireLicenseAcceptance": true
  }
}